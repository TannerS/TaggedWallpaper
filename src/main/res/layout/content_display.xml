<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="io.tanners.taggedwallpaper.DisplayActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:src="@drawable/ic_error_outline_white_48dp"
        android:id="@+id/main_image_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:visibility="visible" />


        <ProgressBar
            android:id="@+id/display_progress_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="visible" />

    <LinearLayout
        android:id="@+id/wallpaper_options_layout"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_gravity="bottom"
        android:alpha=".5"
        android:fitsSystemWindows="false"
        android:background="@color/black"
        android:gravity="bottom"
        android:padding="5dp"
        android:orientation="vertical">


